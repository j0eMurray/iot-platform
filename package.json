{
  "name": "iot-platform",
  "private": true,
  "type": "module",
  "scripts": {
    "fmt": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev:api": "pnpm --filter @svc/api dev",
    "dev:ingest": "pnpm --filter @svc/ingest dev",
    "dev:up": "docker compose -f infra/docker-compose.dev.yml up -d",
    "dev:down": "docker compose -f infra/docker-compose.dev.yml down -v"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/node": "^20.19.18",
    "@types/pg": "^8.11.6",
    "@types/ws": "^8.5.10",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^7.18.0"
  },
  "packageManager": "pnpm@9.9.0"
}
