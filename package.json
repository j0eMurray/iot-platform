{
  "name": "iot-platform",
  "private": true,
  "scripts": {
    "fmt": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev:api": "pnpm --filter @svc/api dev",
    "dev:ingest": "pnpm --filter @svc/ingest dev",
    "dev:up": "docker compose -f infra/docker-compose.dev.yml up -d",
    "dev:down": "docker compose -f infra/docker-compose.dev.yml down -v"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "workspaces": ["services/*"],
  "packageManager": "pnpm@9.9.0"
}
