{
  "name": "iot-platform",
  "dockerComposeFile": ["../infra/docker-compose.dev.yml"],
  "service": "dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "none",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "pnpm": "true"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "github.copilot",
        "github.copilot-chat",
        "continue.continue"
      ]
    }
  },
  "postCreateCommand": "true",
  "remoteUser": "node",
  "overrideCommand": true,
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/continue,target=/home/node/.continue,type=bind"
  ]
}
